        });

        $('.radioDtt').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue'
        });

        var table = $('.datatable').DataTable({
            "order": [[0, "desc"]]
        });

        $('.datatable tbody').on('click', 'tr', function () {

            var radioDtt = $(this).find("td").eq(1).find('.radioDtt');
            var radioDttParent = $(this).find("td").eq(1).find('.radioDtt').parent();

            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');               
                radioDtt.attr('checked', false);
                radioDttParent.removeClass('checked');
            }
            else {
                var trSelected = table.$('tr.selected');
                trSelected.find("td").eq(1).children().removeClass('checked');
                trSelected.find("td").eq(1).find('.radioDtt').attr('checked', false);
                trSelected.removeClass('selected');
                
                $(this).addClass('selected');
                radioDtt.attr('checked', true);
                radioDttParent.addClass('checked');
            }
        });

        $('.iCheck-helper').click(function () {
            $(this).parent().click();
        });

    </script>
